---
import "../base.css";

import {ViewTransitions} from "astro:transitions";
---

<html lang="en">
	<head>
		<title>CVista</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<base href=`${import.meta.env.BASE_URL}/` />
		<link rel="icon" type="image/svg+xml" href="./favicon.svg" />
		<link rel="preconnect" href="https://rsms.me/" />
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
		<ViewTransitions />
	</head>
	<body class="flex min-h-screen flex-col">
		<header class="navbar sticky w-full">
			<div class="mx-auto flex w-full max-w-7xl">
				<div class="navbar-start">
					<a class="navbar-item" href="./">CVista</a>
				</div>
				<div class="navbar-end">
					<a class="navbar-item" href="./">Accueil</a>
					<a class="navbar-item" href="./guide">Guide de rédaction</a>
					<a class="navbar-item" href="./create-cv">Créer un CV</a>
				</div>
			</div>
		</header>
		<main class="flex grow flex-col [&>*]:w-full">
			<slot />
		</main>
		<footer class="bg-gray-3">
			<div
				class="mx-auto grid max-w-7xl grid-cols-1 gap-8 px-6 py-12 sm:grid-cols-2"
			>
				<div class="flex flex-col gap-2">
					<div class="text-2xl font-bold">CVista</div>
					<div class="text-sm opacity-60">
						&copy; {new Date().getFullYear()} CVista. Tous droits
						réservés.
					</div>
				</div>
				<div class="flex flex-col items-end gap-2">
					<a href="./guide" class="link">À propos</a>
					<a href="./privacy" class="link"
						>Politique de confidentialité</a
					>
				</div>
			</div>
		</footer>
	</body>
</html>
